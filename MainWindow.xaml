<Window x:Class="automatic_engine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:automatic_engine"
        mc:Ignorable="d"
        Title="Automatic-Engine" Height="387.409" Width="616.838" ResizeMode="NoResize">
    <Grid>
        <Label Content="Path" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtPath" HorizontalAlignment="Left" Height="23" Margin="61,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350"/>
        <Button x:Name="BtnBrowse" Content="..." HorizontalAlignment="Left" Margin="416,12,0,0" VerticalAlignment="Top" Width="19" Click="BtnBrowse_Click"/>
        <Label Content="Replace" HorizontalAlignment="Left" Margin="5,37,0,0" VerticalAlignment="Top"/>
        <Label Content="With" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtReplace" HorizontalAlignment="Left" Height="23" Margin="61,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" Background="White"/>
        <TextBox x:Name="TxtWith" HorizontalAlignment="Left" Height="23" Margin="61,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350"/>
        <Button x:Name="BtnExecute" Content="Execute" HorizontalAlignment="Left" Margin="416,68,0,0" VerticalAlignment="Top" Click="BtnExecute_Click"/>
        <Button x:Name="BtnPreview" Content="Preview" HorizontalAlignment="Left" Margin="336,131,0,0" VerticalAlignment="Top" Width="75" Click="BtnPreview_Click"/>

    </Grid>
</Window>
